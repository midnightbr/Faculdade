@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Common

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Dog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dog.Name" class="control-label"></label>
                <input asp-for="Dog.Name" required ="" class="form-control" />
                <span asp-validation-for="Dog.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.Sexo" class="control-label"></label>
                <select asp-for="Dog.Sexo" required="" class="form-control">
                    <option value="Female">Femea</option>
                    <option value="Male">Macho</option>
                </select>
                <span asp-validation-for="Dog.Sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.BreedId" class="control-label"></label>
                <select asp-for="Dog.BreedId" class ="form-control" asp-items="@(new SelectList(Model.ListBreeds, "Id", "Name"))"></select>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-danger" asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
